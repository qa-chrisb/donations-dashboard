---
const { title = "Donations", updatedAt } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <meta name="color-scheme" content="light dark" />
  </head>
  <body class="bg-gray-50 text-gray-900 dark:bg-gray-900 dark:text-gray-100">
    <header class="border-b border-gray-200 dark:border-gray-800">
      <div class="mx-auto max-w-5xl p-6 flex items-end justify-between">
        <div>
          <h1 class="text-2xl font-semibold">{title}</h1>
          <p class="text-sm text-gray-500 dark:text-gray-400">Static build via Astro.</p>
        </div>
        {updatedAt && (
          <div class="text-sm text-gray-500 dark:text-gray-400">
            Updated <time class="font-medium">{new Date(updatedAt).toLocaleString()}</time>
          </div>
        )}
      </div>
    </header>
    <main class="mx-auto max-w-5xl p-6">
      <slot />
    </main>
    <footer class="mx-auto max-w-5xl p-6 text-center text-sm text-gray-500 dark:text-gray-400">
        Made with ❤️ & ☕ |
        <a href="https://github.com/sponsors/qa-chrisb" target="_blank" rel="noopener noreferrer"> <img
                src="https://img.shields.io/badge/Sponsor-❤️-blue" alt="Sponsor on GitHub"> </a>
      </a>
    </footer>
  </body>
</html>
